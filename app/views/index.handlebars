<div class="container">
  <div class="show" id="homeScreen">
    <h1>moodifi</h1>
    <p id="about">
      Curated playlists for whatever you do, or your mood.
    </p>
    <div class="row">
      <div class="card text-white bg-dark mb-3 animate__animated animate__fadeIn" style="width: 20rem; height:18rem;"
        id="moodsBtn">
        <div class="card-body">
          <p class="card-text">
            <i class="fa fa-smile-o"></i>
          </p>
        </div>
        <h5 class="card-title">MOODS</h5>
      </div>
      <div class="card text-white bg-dark mb-3 animate__animated animate__fadeIn" style="width: 20rem; height:18rem;"
        id="activeBtn">
        <div class="card-body">
          <p class="card-text">
            <i class="fa fa-angle-double-up"></i>
          </p>
        </div>
        <h5 class="card-title">ACTIVITIES</h5>
      </div>
    </div>
  </div>

  <div class="moods show">
    <div class="row">
      <ul id="moods-list">
        {{#each playlist}}
        {{#if this.CATEGORY}}
        <li>
          {{this.playlist.NAME}}
        </li>
        {{/if}} {{/each}}
      </ul>
      <p>hello</p>
    </div>

    <div class="active hide">
      <p>{{playlist.NAME}}</p>
      <p>
        <a href="{{playlist.LINK}}">
          <img src="{{playlist.IMAGE}}">
        </a>
      </p>
      <p>hello</p>
      <h2><i class="fa fa-thumbs-up" id="increment" aria-hidden="true"></i> {{playlist.RATING}}</i></h2>
    </div>

  </div>