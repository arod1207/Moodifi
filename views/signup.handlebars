<!-- Sign Up Page -->
<div class="container">
    <h1>SIGN UP</h1>
    <div>
        <form class="signUpForm" method="POST">
            <div>
                <label>Username:</label>
                <input type="text" id="username" name="username" />
            </div>
            <div>
                <label>Password:</label>
                <input type="text" id="password" name="password" />
            </div>
            <div>
                <button type="submit" id="signUpBtn" class="btn btn-outline-light">Sign Up</button>
            </div>
        </form>
        <div class="row">
            <p id="signUpPrompt">Already have an acoount? Log in to start listening.</p>
        </div>
        <div class="row">
            <a href="/login" id="sLogIn">
                <button id="sLogIn" type="button" class="btn btn-outline-light">Log In</button>
            </a>
        </div>
    </div>

    {{err}}